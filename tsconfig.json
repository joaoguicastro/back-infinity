{
  "compilerOptions": {
    "target": "ES2020",               // Define a versão do JavaScript para a qual o TypeScript será transpilado
    "module": "commonjs",             // Define o módulo do sistema como CommonJS
    "rootDir": "src",                 // Define a raiz dos arquivos fonte como "src"
    "outDir": "build",                // Define a saída dos arquivos transpilados como a pasta "build"
    "esModuleInterop": true,          // Facilita a interoperabilidade entre módulos CommonJS e ES
    "forceConsistentCasingInFileNames": true,  // Garante consistência de letras maiúsculas e minúsculas nos imports
    "strict": true,                   // Ativa todas as verificações estritas do TypeScript
    "skipLibCheck": true              // Ignora a verificação de declarações de bibliotecas para acelerar a compilação
  },
  "include": [
    "src/**/*.ts"                     // Inclui todos os arquivos .ts dentro da pasta src
  ],
  "exclude": [
    "node_modules",                   // Exclui a pasta node_modules da compilação
    "**/*.test.ts"                    // Exclui arquivos de teste (opcional)
  ]
}
